<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

  <Transition
      app:constraintSetEnd="@id/end"
      app:constraintSetStart="@id/start"
      app:duration="@android:integer/config_longAnimTime"
      app:interpolator="easeInOut"
      >
    <OnSwipe
        app:dragDirection="dragLeft"
        app:touchAnchorId="@id/viewPager"
        app:touchAnchorSide="right"
        />
    <KeyFrameSet>
      <KeyAttribute
          android:scaleX="1.0"
          android:scaleY="1.0"
          app:framePosition="0"
          app:target="@id/icon"
          >
        <CustomAttribute
            app:attributeName="imageAlpha"
            app:customIntegerValue="255"/>
      </KeyAttribute>
      <KeyAttribute
          android:scaleX="1.0"
          android:scaleY="1.0"
          android:translationY="0dp"
          app:drawPath="path"
          app:framePosition="0"
          app:target="@id/details_tri"
          />
      <KeyAttribute
          android:scaleX="0.0"
          android:scaleY="0.0"
          app:framePosition="50"
          app:target="@id/icon"
          >
        <CustomAttribute
            app:attributeName="imageAlpha"
            app:customIntegerValue="0"/>
      </KeyAttribute>
      <KeyAttribute
          android:scaleX="1.0"
          android:scaleY="1.0"
          android:translationY="150dp"
          app:framePosition="50"
          app:target="@id/details_tri"
          app:transitionEasing="accelerate"
          />
      <KeyAttribute
          android:scaleX="1.0"
          android:scaleY="1.0"
          app:framePosition="100"
          app:target="@id/icon"
          >
        <CustomAttribute
            app:attributeName="imageAlpha"
            app:customIntegerValue="255"/>
      </KeyAttribute>
      <KeyAttribute
          android:scaleX="1.0"
          android:scaleY="1.0"
          android:translationY="0dp"
          app:framePosition="100"
          app:target="@id/details_tri"
          app:transitionEasing="decelerate"
          />
    </KeyFrameSet>
  </Transition>

  <ConstraintSet android:id="@+id/start">
    <Constraint
        android:id="@id/icon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:scaleX="1.0"
        android:scaleY="1.0"
        app:layout_constraintEnd_toEndOf="@id/guide_icon_end"
        app:layout_constraintLeft_toLeftOf="@id/guide_icon_start"
        app:layout_constraintRight_toRightOf="@id/guide_icon_end"
        app:layout_constraintStart_toStartOf="@id/guide_icon_start"
        app:layout_constraintTop_toTopOf="@+id/guide_icon_top">
      <CustomAttribute
          app:attributeName="imageAlpha"
          app:customIntegerValue="255"/>
    </Constraint>
    <Constraint
        android:id="@id/details_tri"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleX="1.0"
        android:scaleY="1.0"
        app:layout_constraintBottom_toTopOf="@+id/guide_details_btm"
        app:layout_constraintEnd_toEndOf="@+id/guide_details_end"
        app:layout_constraintLeft_toLeftOf="@+id/guide_details_start"
        app:layout_constraintRight_toRightOf="@+id/guide_details_end"
        app:layout_constraintStart_toStartOf="@+id/guide_details_start"
        app:layout_constraintTop_toTopOf="@+id/guide_details_top"
        />
  </ConstraintSet>

  <ConstraintSet android:id="@+id/end">
    <Constraint
        android:id="@id/icon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintEnd_toEndOf="@id/guide_icon_end"
        app:layout_constraintLeft_toLeftOf="@id/guide_icon_start"
        app:layout_constraintRight_toRightOf="@id/guide_icon_end"
        app:layout_constraintStart_toStartOf="@id/guide_icon_start"
        app:layout_constraintTop_toTopOf="@+id/guide_icon_top"
        >
      <CustomAttribute
          app:attributeName="imageAlpha"
          app:customIntegerValue="255"/>
    </Constraint>
    <Constraint
        android:id="@id/details_tri"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guide_details_btm"
        app:layout_constraintEnd_toEndOf="@+id/guide_details_end"
        app:layout_constraintLeft_toLeftOf="@+id/guide_details_start"
        app:layout_constraintRight_toRightOf="@+id/guide_details_end"
        app:layout_constraintStart_toStartOf="@+id/guide_details_start"
        app:layout_constraintTop_toTopOf="@+id/guide_details_top"
        />
  </ConstraintSet>
</MotionScene>
